{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["DOM", "ESNext", "ES2020.Intl"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["react"],
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
